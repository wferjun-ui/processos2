<Window x:Class="SistemaJuridico.Views.ProcessoDetalhesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Gestão do Processo" Height="800" Width="1200" 
        WindowStartupLocation="CenterScreen" Background="{DynamicResource MaterialDesignPaper}">
    
    <Grid>
        <Grid.ColumnDefinitions><ColumnDefinition Width="280"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
        
        <Border Grid.Column="0" Background="White" Effect="{StaticResource MaterialDesignShadowDepth1}" Panel.ZIndex="1">
            <StackPanel Margin="20">
                <Button Command="{Binding VoltarCommand}" Content="VOLTAR AO DASHBOARD" Style="{StaticResource MaterialDesignOutlinedButton}" Margin="0,0,0,30"/>
                
                <TextBlock Text="DADOS DO PROCESSO" FontSize="11" FontWeight="Bold" Foreground="Gray"/>
                <TextBlock Text="{Binding Processo.Numero}" FontSize="16" FontWeight="Bold" Margin="0,5,0,15" TextWrapping="Wrap"/>
                
                <TextBlock Text="PACIENTE" FontSize="11" FontWeight="Bold" Foreground="Gray"/>
                <TextBlock Text="{Binding Processo.Paciente}" FontSize="16" FontWeight="Bold" Margin="0,5,0,15" TextWrapping="Wrap"/>
                
                <TextBlock Text="JUIZ / VARA" FontSize="11" FontWeight="Bold" Foreground="Gray"/>
                <TextBlock Text="{Binding Processo.Juiz}" FontSize="14" Margin="0,5,0,15" TextWrapping="Wrap"/>

                <Separator Margin="0,15"/>
                
                <TextBlock Text="STATUS ATUAL" FontSize="11" FontWeight="Bold" Foreground="Gray"/>
                <TextBlock Text="{Binding StatusTexto}" FontSize="20" FontWeight="Bold" Foreground="{Binding StatusCorBrush}" Margin="0,5,0,15"/>
                
                <Separator Margin="0,15"/>
                
                <TextBlock Text="SALDO DISPONÍVEL" FontSize="11" FontWeight="Bold" Foreground="Gray"/>
                <TextBlock Text="{Binding SaldoDisplay}" FontSize="24" FontWeight="Bold" Foreground="{Binding SaldoCor}" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <TabControl Grid.Column="1" Style="{StaticResource MaterialDesignNavigatilRailTabControl}" TabStripPlacement="Top" Margin="10">
            
            <TabItem Header="VERIFICAÇÃO">
                <ScrollViewer>
                    <StackPanel Margin="30">
                        <TextBlock Text="OBSERVAÇÕES FIXAS" FontWeight="Bold" Foreground="Gray"/>
                        <TextBox Text="{Binding ObsFixa}" AcceptsReturn="True" TextWrapping="Wrap" Height="80" Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,5,0,20"/>
                        
                        <TextBlock Text="1. FASE PROCESSUAL" FontWeight="Bold" Foreground="{StaticResource PrimaryHueMidBrush}"/>
                        <ComboBox ItemsSource="{Binding FasesPossiveis}" SelectedItem="{Binding FaseProcessual}" Style="{StaticResource MaterialDesignOutlinedComboBox}" Margin="0,5,0,20"/>
                        
                        <TextBlock Text="2. DILIGÊNCIAS" FontWeight="Bold" Foreground="{StaticResource PrimaryHueMidBrush}"/>
                        <materialDesign:Card Padding="15" Margin="0,5,0,20" Background="#F8FAFC">
                            <StackPanel>
                                <CheckBox IsChecked="{Binding DiligenciaRealizada}" Content="Houve diligências realizadas?" FontWeight="Bold"/>
                                <TextBox Text="{Binding DiligenciaDesc}" IsEnabled="{Binding DiligenciaRealizada}" materialDesign:HintAssist.Hint="Descreva o que foi feito..." Margin="25,5,0,10"/>
                                
                                <CheckBox IsChecked="{Binding DiligenciaPendente}" Content="Existem pendências?" FontWeight="Bold" Margin="0,10,0,0"/>
                                <TextBox Text="{Binding PendenciaDesc}" IsEnabled="{Binding DiligenciaPendente}" materialDesign:HintAssist.Hint="Descreva o que falta..." Margin="25,5,0,0"/>
                            </StackPanel>
                        </materialDesign:Card>

                        <TextBlock Text="3. PRÓXIMA VERIFICAÇÃO" FontWeight="Bold" Foreground="{StaticResource PrimaryHueMidBrush}"/>
                        <Grid Margin="0,5,0,20">
                            <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                            <TextBox Text="{Binding Responsavel}" materialDesign:HintAssist.Hint="Responsável" Margin="0,0,10,0"/>
                            <TextBox Grid.Column="1" Text="{Binding ProxData}" materialDesign:HintAssist.Hint="Data (DD/MM/AAAA)"/>
                        </Grid>

                        <StackPanel Visibility="{Binding TemSaudeVisibility}">
                            <TextBlock Text="4. ATUALIZAÇÃO ITENS DE SAÚDE" FontWeight="Bold" Foreground="{StaticResource PrimaryHueMidBrush}"/>
                            <ItemsControl ItemsSource="{Binding ItensVerificacao}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <materialDesign:Card Margin="0,5" Padding="10" Background="#F0F9FF">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Nome}" FontWeight="Bold" FontSize="14" Foreground="#0284C7"/>
                                                <Grid Margin="0,5">
                                                    <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                                                    <TextBox Text="{Binding DataPrescricao}" materialDesign:HintAssist.Hint="Últ. Prescrição" Margin="0,0,5,0" FontSize="12"/>
                                                    <TextBox Grid.Column="1" Text="{Binding Qtd}" materialDesign:HintAssist.Hint="Qtd/Freq" Margin="5,0" FontSize="12"/>
                                                    <TextBox Grid.Column="2" Text="{Binding Local}" materialDesign:HintAssist.Hint="Local" Margin="5,0" FontSize="12"/>
                                                    <StackPanel Grid.Column="3" Orientation="Horizontal">
                                                        <CheckBox IsChecked="{Binding TemBloqueio}" Content="Bloq. Jud." Foreground="Red"/>
                                                        <CheckBox IsChecked="{Binding IsDesnecessario}" Content="Desnec." Margin="10,0,0,0"/>
                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>
                                        </materialDesign:Card>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <Button Command="{Binding SalvarVerificacaoCommand}" Content="SALVAR E MANTER ABERTO" Height="50" Margin="0,30" Background="#10B981" BorderBrush="#10B981"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="HISTÓRICO">
                <DataGrid ItemsSource="{Binding HistoricoGeral}" AutoGenerateColumns="False" IsReadOnly="True" HeadersVisibility="Column" materialDesign:DataGridAssist.CellPadding="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Data" Binding="{Binding data_hora}"/>
                        <DataGridTextColumn Header="Responsável" Binding="{Binding responsavel}"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding status_processo}" FontWeight="Bold"/>
                        <DataGridTextColumn Header="Detalhes" Binding="{Binding alteracoes_texto}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="CONTAS">
                <Grid Margin="20">
                    <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="*"/><RowDefinition Height="*"/></Grid.RowDefinitions>
                    
                    <materialDesign:Card Padding="15" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="NOVO LANÇAMENTO" FontWeight="Bold" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions><ColumnDefinition Width="150"/><ColumnDefinition Width="120"/><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                                <ComboBox Text="{Binding FinTipo}" materialDesign:HintAssist.Hint="Tipo">
                                    <ComboBoxItem Content="Alvará"/><ComboBoxItem Content="Despesa"/><ComboBoxItem Content="Tratamento"/>
                                </ComboBox>
                                <TextBox Grid.Column="1" Text="{Binding FinData}" materialDesign:HintAssist.Hint="Data" Margin="10,0"/>
                                <TextBox Grid.Column="2" Text="{Binding FinNF}" materialDesign:HintAssist.Hint="NF / Doc" Margin="10,0"/>
                                <TextBox Grid.Column="3" Text="{Binding FinMov}" materialDesign:HintAssist.Hint="Movimentação / Anexo"/>
                            </Grid>
                            
                            <Grid Visibility="{Binding BoxExtraVisibility}" Margin="0,10">
                                <Grid.ColumnDefinitions><ColumnDefinition Width="2*"/><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                                <TextBox Text="{Binding FinItemNome}" materialDesign:HintAssist.Hint="Item / Descrição"/>
                                <TextBox Grid.Column="1" Text="{Binding FinQtd}" materialDesign:HintAssist.Hint="Qtd" Margin="10,0"/>
                                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="10,0">
                                    <TextBox Text="{Binding FinMes}" materialDesign:HintAssist.Hint="Mês" Width="30"/>
                                    <TextBlock Text="/" VerticalAlignment="Bottom" Margin="5"/>
                                    <TextBox Text="{Binding FinAno}" materialDesign:HintAssist.Hint="Ano" Width="40"/>
                                </StackPanel>
                                <TextBox Grid.Column="3" Text="{Binding FinObs}" materialDesign:HintAssist.Hint="Obs"/>
                            </Grid>

                            <Grid Margin="0,15,0,0">
                                <Grid.ColumnDefinitions><ColumnDefinition Width="Auto"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                                <TextBox Text="{Binding FinValor}" materialDesign:HintAssist.Hint="VALOR TOTAL (R$)" FontSize="16" FontWeight="Bold" Width="150"/>
                                <Button Grid.Column="1" Command="{Binding AdicionarRascunhoCommand}" Content="ADICIONAR AO RASCUNHO" HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="*"/></Grid.RowDefinitions>
                        <DockPanel LastChildFill="False">
                            <TextBlock Text="RASCUNHOS (Pendente de Lançamento)" FontWeight="Bold" Foreground="#F59E0B" VerticalAlignment="Center"/>
                            <Button DockPanel.Dock="Right" Command="{Binding LancarTudoCommand}" Content="LANÇAR TUDO" Background="#F59E0B" BorderBrush="#F59E0B" Height="30" FontSize="12"/>
                        </DockPanel>
                        <DataGrid Grid.Row="1" ItemsSource="{Binding ListaRascunhos}" AutoGenerateColumns="False" IsReadOnly="True" Background="#FFFBEB">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Data" Binding="{Binding Data}"/>
                                <DataGridTextColumn Header="Histórico" Binding="{Binding Historico}" Width="*"/>
                                <DataGridTextColumn Header="Valor" Binding="{Binding ValorConta, StringFormat=C2}"/>
                                <DataGridTemplateColumn><DataGridTemplateColumn.CellTemplate><DataTemplate>
                                    <Button Command="{Binding DataContext.ExcluirContaCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding Id}" Content="Excluir" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Red"/>
                                </DataTemplate></DataGridTemplateColumn.CellTemplate></DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>

                    <Grid Grid.Row="2" Margin="0,20,0,0">
                        <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="*"/></Grid.RowDefinitions>
                        <DockPanel LastChildFill="False">
                            <TextBlock Text="HISTÓRICO FINANCEIRO" FontWeight="Bold" Foreground="{StaticResource PrimaryHueMidBrush}" VerticalAlignment="Center"/>
                            <Button DockPanel.Dock="Right" Command="{Binding GerarPDFCommand}" Content="PDF" Style="{StaticResource MaterialDesignOutlinedButton}" Height="30"/>
                        </DockPanel>
                        <DataGrid Grid.Row="1" ItemsSource="{Binding ListaHistoricoFin}" AutoGenerateColumns="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Data" Binding="{Binding Data}"/>
                                <DataGridTextColumn Header="Histórico" Binding="{Binding Historico}" Width="*"/>
                                <DataGridTextColumn Header="Crédito" Binding="{Binding ValorAlvara, StringFormat=C2}" Foreground="Green"/>
                                <DataGridTextColumn Header="Débito" Binding="{Binding ValorConta, StringFormat=C2}" Foreground="Red"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
