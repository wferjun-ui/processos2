<Window x:Class="SistemaJuridico.Views.ProcessoDetalhesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Gestão do Processo" Height="800" Width="1280" WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Border Grid.Column="0" Background="White" Effect="{StaticResource MaterialDesignShadowDepth1}" Panel.ZIndex="1">
            <StackPanel Margin="20">
                <Button Command="{Binding VoltarCommand}" Content="VOLTAR AO DASHBOARD" Style="{StaticResource MaterialDesignOutlinedButton}" Margin="0,0,0,30"/>
                
                <TextBlock Text="PROCESSO" FontSize="11" FontWeight="Bold" Foreground="Gray"/>
                <TextBlock Text="{Binding Numero}" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" TextWrapping="Wrap"/>
                
                <TextBlock Text="PACIENTE" FontSize="11" FontWeight="Bold" Foreground="Gray"/>
                <TextBlock Text="{Binding Paciente}" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" TextWrapping="Wrap"/>
                
                <TextBlock Text="JUIZ" FontSize="11" FontWeight="Bold" Foreground="Gray"/>
                <TextBlock Text="{Binding Juiz}" FontSize="14" Margin="0,0,0,15"/>

                <Separator Margin="0,15"/>
                <TextBlock Text="STATUS ATUAL" FontSize="11" FontWeight="Bold" Foreground="Gray"/>
                <TextBlock Text="{Binding StatusTexto}" FontSize="20" FontWeight="Bold" Foreground="{Binding StatusCor}" Margin="0,5,0,15"/>
                
                <TextBlock Text="SALDO DISPONÍVEL" FontSize="11" FontWeight="Bold" Foreground="Gray"/>
                <TextBlock Text="{Binding SaldoDisplay}" FontSize="24" FontWeight="Bold" Foreground="{Binding SaldoCor}" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <TabControl Grid.Column="1" Style="{StaticResource MaterialDesignNavigatilRailTabControl}" TabStripPlacement="Top" Margin="10">
            
            <TabItem Header="VERIFICAÇÃO">
                <ScrollViewer>
                    <StackPanel Margin="30">
                        <TextBlock Text="OBSERVAÇÕES FIXAS" FontWeight="Bold" Foreground="Gray"/>
                        <TextBox Text="{Binding ObsFixa}" AcceptsReturn="True" TextWrapping="Wrap" Height="60" Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,5,0,20"/>
                        
                        <TextBlock Text="1. FASE PROCESSUAL" FontWeight="Bold" Foreground="{StaticResource PrimaryHueMidBrush}"/>
                        <ComboBox ItemsSource="{Binding Fases}" SelectedItem="{Binding FaseProcessual}" Style="{StaticResource MaterialDesignOutlinedComboBox}" Margin="0,5,0,20"/>
                        
                        <TextBlock Text="2. DILIGÊNCIAS" FontWeight="Bold" Foreground="{StaticResource PrimaryHueMidBrush}"/>
                        <materialDesign:Card Padding="15" Margin="0,5,0,20" Background="#F8FAFC">
                            <StackPanel>
                                <CheckBox IsChecked="{Binding DiligenciaRealizada}" Content="Houve diligências realizadas?" FontWeight="Bold"/>
                                <TextBox Text="{Binding DiligenciaDesc}" IsEnabled="{Binding DiligenciaRealizada}" materialDesign:HintAssist.Hint="Descreva o que foi feito..." Margin="25,5,0,10"/>
                                <CheckBox IsChecked="{Binding DiligenciaPendente}" Content="Existem pendências?" FontWeight="Bold"/>
                                <TextBox Text="{Binding PendenciaDesc}" IsEnabled="{Binding DiligenciaPendente}" materialDesign:HintAssist.Hint="Descreva o que falta..." Margin="25,5,0,0"/>
                            </StackPanel>
                        </materialDesign:Card>

                        <TextBlock Text="3. PRÓXIMA VERIFICAÇÃO" FontWeight="Bold" Foreground="{StaticResource PrimaryHueMidBrush}"/>
                        <Grid Margin="0,5,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding Responsavel}" materialDesign:HintAssist.Hint="Responsável" Margin="0,0,10,0"/>
                            <TextBox Grid.Column="1" Text="{Binding ProxData}" materialDesign:HintAssist.Hint="Data (DD/MM/AAAA)"/>
                        </Grid>

                        <StackPanel Visibility="{Binding SaudeVisibility}">
                            <TextBlock Text="4. GESTÃO DE ITENS DE SAÚDE" FontWeight="Bold" Foreground="{StaticResource PrimaryHueMidBrush}"/>
                            <ItemsControl ItemsSource="{Binding ItensSaude}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <materialDesign:Card Margin="0,5" Padding="10" Background="#F0F9FF">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Nome}" FontWeight="Bold" Foreground="#0284C7"/>
                                                <Grid Margin="0,5">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBox Text="{Binding DataPrescricao}" materialDesign:HintAssist.Hint="Últ. Prescrição" Margin="0,0,5,0"/>
                                                    <TextBox Grid.Column="1" Text="{Binding Qtd}" materialDesign:HintAssist.Hint="Qtd/Freq" Margin="5,0"/>
                                                    <TextBox Grid.Column="2" Text="{Binding Local}" materialDesign:HintAssist.Hint="Local" Margin="5,0"/>
                                                    <StackPanel Grid.Column="3" Orientation="Horizontal">
                                                        <CheckBox IsChecked="{Binding TemBloqueio}" Content="Bloq. Jud." Foreground="Red"/>
                                                        <CheckBox IsChecked="{Binding IsDesnecessario}" Content="Desnec." Margin="10,0,0,0"/>
                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>
                                        </materialDesign:Card>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <Button Command="{Binding SalvarVerificacaoCommand}" Content="SALVAR E MANTER ABERTO" Height="50" Margin="0,30" Background="#10B981" BorderBrush="#10B981"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="CONTAS">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <materialDesign:Card Padding="15" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="NOVO LANÇAMENTO / EDIÇÃO" FontWeight="Bold" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox Text="{Binding FinTipo}" materialDesign:HintAssist.Hint="Tipo">
                                    <ComboBoxItem Content="Alvará"/>
                                    <ComboBoxItem Content="Despesa"/>
                                    <ComboBoxItem Content="Tratamento"/>
                                </ComboBox>
                                <TextBox Grid.Column="1" Text="{Binding FinData}" materialDesign:HintAssist.Hint="Data" Margin="10,0"/>
                                <TextBox Grid.Column="2" Text="{Binding FinNf}" materialDesign:HintAssist.Hint="NF / Doc" Margin="10,0"/>
                                <StackPanel Grid.Column="3" Orientation="Horizontal">
                                    <TextBox Text="{Binding FinMov}" materialDesign:HintAssist.Hint="Movimentação" Width="150"/>
                                    <CheckBox IsChecked="{Binding IsAnexo}" Content="Anexo" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                </StackPanel>
                            </Grid>
                            
                            <Grid Visibility="{Binding ExtrasVisivel}" Margin="0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid>
                                    <ComboBox Visibility="{Binding ComboVisivel}" ItemsSource="{Binding ListaItensCombo}" SelectedItem="{Binding FinItemCombo}" materialDesign:HintAssist.Hint="Selecione Item..."/>
                                    <TextBox Visibility="{Binding TextoVisivel}" Text="{Binding FinItemTexto}" materialDesign:HintAssist.Hint="Nome do Item..."/>
                                </Grid>
                                <TextBox Grid.Column="1" Text="{Binding FinQtd}" materialDesign:HintAssist.Hint="Qtd" Margin="10,0"/>
                                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="10,0">
                                    <TextBox Text="{Binding FinMes}" materialDesign:HintAssist.Hint="Mês" Width="30"/>
                                    <TextBlock Text="/" VerticalAlignment="Bottom" Margin="5"/>
                                    <TextBox Text="{Binding FinAno}" materialDesign:HintAssist.Hint="Ano" Width="40"/>
                                </StackPanel>
                                <TextBox Grid.Column="3" Text="{Binding FinObs}" materialDesign:HintAssist.Hint="Obs"/>
                            </Grid>

                            <Grid Margin="0,15,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding FinValor}" materialDesign:HintAssist.Hint="VALOR (R$)" FontSize="16" FontWeight="Bold" Width="150"/>
                                
                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Command="{Binding CancelarEdicaoCommand}" 
                                            Visibility="{Binding BtnCancelarEditVisibility}" 
                                            Content="CANCELAR" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Red" Margin="0,0,10,0"/>
                                    
                                    <Button Command="{Binding AdicionarRascunhoCommand}" 
                                            Content="{Binding BtnSalvarContaTexto}" 
                                            Background="{Binding BtnSalvarContaCor}" 
                                            BorderBrush="{Binding BtnSalvarContaCor}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <DockPanel LastChildFill="False">
                            <TextBlock Text="RASCUNHOS (Pendente) - Duplo clique para editar" FontWeight="Bold" Foreground="#F59E0B" VerticalAlignment="Center"/>
                            <Button DockPanel.Dock="Right" Command="{Binding LancarTudoCommand}" Content="LANÇAR TUDO" Background="#F59E0B" BorderBrush="#F59E0B" Height="30" FontSize="12"/>
                        </DockPanel>
                        
                        <DataGrid Grid.Row="1" ItemsSource="{Binding Rascunhos}" AutoGenerateColumns="False" IsReadOnly="True" Background="#FFFBEB">
                            <DataGrid.InputBindings>
                                <MouseBinding Gesture="LeftDoubleClick" Command="{Binding DataContext.EditarContaCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                            </DataGrid.InputBindings>
                            
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Data" Binding="{Binding Data}"/>
                                <DataGridTextColumn Header="Histórico" Binding="{Binding Hist}" Width="*"/>
                                <DataGridTextColumn Header="Valor" Binding="{Binding Valor}"/>
                                <DataGridTemplateColumn>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Command="{Binding DataContext.ExcluirContaCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding Id}" Content="X" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Red"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>

                    <Grid Grid.Row="2" Margin="0,20,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <DockPanel LastChildFill="False">
                            <TextBlock Text="HISTÓRICO FINANCEIRO - Duplo clique para editar" FontWeight="Bold" Foreground="{StaticResource PrimaryHueMidBrush}" VerticalAlignment="Center"/>
                            <Button DockPanel.Dock="Right" Command="{Binding GerarPdfCommand}" Content="PDF" Style="{StaticResource MaterialDesignOutlinedButton}" Height="30"/>
                        </DockPanel>
                        
                        <DataGrid Grid.Row="1" ItemsSource="{Binding HistoricoFin}" AutoGenerateColumns="False" IsReadOnly="True">
                             <DataGrid.InputBindings>
                                <MouseBinding Gesture="LeftDoubleClick" Command="{Binding DataContext.EditarContaCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                            </DataGrid.InputBindings>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Data" Binding="{Binding Data}"/>
                                <DataGridTextColumn Header="Histórico" Binding="{Binding Hist}" Width="*"/>
                                <DataGridTextColumn Header="Crédito" Binding="{Binding Cred}" Foreground="Green"/>
                                <DataGridTextColumn Header="Débito" Binding="{Binding Deb}" Foreground="Red"/>
                                <DataGridTextColumn Header="Saldo" Binding="{Binding Saldo}" FontWeight="Bold"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </TabItem>
            
            <TabItem Header="LOGS">
                <DataGrid ItemsSource="{Binding HistoricoLogs}" AutoGenerateColumns="True" IsReadOnly="True"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
