<Window x:Class="SistemaJuridico.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Painel Administrativo" Height="500" Width="800" WindowStartupLocation="CenterScreen">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Gerenciamento de Usuários" FontSize="24" FontWeight="Bold" Foreground="{StaticResource PrimaryHueMidBrush}"/>

        <Border Grid.Row="1" Margin="0,20" Padding="15" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5">
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding NovoUser}" Width="150" materialDesign:HintAssist.Hint="Usuário" Margin="0,0,10,0"/>
                <TextBox Text="{Binding NovaSenha}" Width="150" materialDesign:HintAssist.Hint="Senha" Margin="0,0,10,0"/>
                <TextBox Text="{Binding NovoEmail}" Width="200" materialDesign:HintAssist.Hint="Email" Margin="0,0,10,0"/>
                <CheckBox IsChecked="{Binding NovoIsAdmin}" Content="É Admin?" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <Button Command="{Binding AdicionarUsuarioCommand}" Content="CRIAR" Width="100"/>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="2" ItemsSource="{Binding Users}" AutoGenerateColumns="False" IsReadOnly="True" materialDesign:DataGridAssist.CellPadding="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Usuário" Binding="{Binding Username}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridCheckBoxColumn Header="Admin" Binding="{Binding IsAdmin}" IsReadOnly="True"/>
                <DataGridTemplateColumn Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Command="{Binding DataContext.DeletarUsuarioCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                    CommandParameter="{Binding Id}" Content="Remover" Background="Red" BorderBrush="Red" Height="25"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
