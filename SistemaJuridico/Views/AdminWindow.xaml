<Window x:Class="SistemaJuridico.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Administração de Usuários" Height="500" Width="800" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <materialDesign:PackIcon Kind="Security" Width="30" Height="30" Foreground="{StaticResource PrimaryHueMidBrush}"/>
            <TextBlock Text="Gerenciamento de Acessos" FontSize="20" FontWeight="Bold" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <Border Grid.Row="1" Margin="0,20" Padding="15" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Background="#FAFAFA">
            <StackPanel>
                <TextBlock Text="Novo Usuário" FontWeight="Bold" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox Text="{Binding NovoUser}" Width="150" materialDesign:HintAssist.Hint="Usuário" Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,10,0"/>
                    <TextBox Text="{Binding NovaSenha}" Width="150" materialDesign:HintAssist.Hint="Senha" Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,10,0"/>
                    <TextBox Text="{Binding NovoEmail}" Width="200" materialDesign:HintAssist.Hint="Email (Opcional)" Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,10,0"/>
                    <CheckBox IsChecked="{Binding NovoIsAdmin}" Content="Admin" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <Button Command="{Binding AdicionarUsuarioCommand}" Content="ADICIONAR"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="2" ItemsSource="{Binding Users}" AutoGenerateColumns="False" IsReadOnly="True" 
                  materialDesign:DataGridAssist.CellPadding="10" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Usuário" Binding="{Binding Username}" Width="150" FontWeight="Bold"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridCheckBoxColumn Header="É Admin?" Binding="{Binding IsAdmin}" IsReadOnly="True"/>
                <DataGridTemplateColumn Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Command="{Binding DataContext.DeletarUsuarioCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                    CommandParameter="{Binding Id}" Content="EXCLUIR" Background="#FF5252" BorderBrush="#FF5252" Height="25" FontSize="10"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="3" Command="{Binding FecharCommand}" Content="FECHAR" Style="{StaticResource MaterialDesignOutlinedButton}" HorizontalAlignment="Right" Margin="0,15,0,0"/>
    </Grid>
</Window>
