<Window x:Class="SistemaJuridico.Views.CadastroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Novo Processo" Height="550" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Novo Processo" FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryHueMidBrush}" Margin="0,0,0,20"/>

            <TextBox Text="{Binding Numero, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Número CNJ (apenas números)" Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,0,15"/>
            <TextBox Text="{Binding Paciente}" materialDesign:HintAssist.Hint="Nome do Paciente/Cliente" Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,0,15"/>
            
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="10"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Text="{Binding Juiz}" materialDesign:HintAssist.Hint="Juiz / Vara" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <ComboBox Grid.Column="2" Text="{Binding Classificacao}" materialDesign:HintAssist.Hint="Classificação" Style="{StaticResource MaterialDesignOutlinedComboBox}">
                    <ComboBoxItem Content="Cível" IsSelected="True"/>
                    <ComboBoxItem Content="Família"/>
                    <ComboBoxItem Content="Saúde"/>
                    <ComboBoxItem Content="Criminal"/>
                </ComboBox>
            </Grid>
            
            <TextBox Text="{Binding Reu}" materialDesign:HintAssist.Hint="Réu / Parte Contrária" Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,0,20"/>

            <Button Content="SALVAR PROCESSO" Command="{Binding SalvarCommand}" Height="50"/>
        </StackPanel>
    </Grid>
</Window>
