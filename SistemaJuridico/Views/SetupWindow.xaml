<Window x:Class="SistemaJuridico.Views.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Configuração Inicial" Height="300" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">

    <Border Background="White" BorderBrush="{StaticResource PrimaryHueMidBrush}" BorderThickness="1" CornerRadius="5">
        <StackPanel Margin="30">
            <TextBlock Text="Bem-vindo ao Sistema Jurídico" FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryHueMidBrush}" Margin="0,0,0,20"/>
            
            <TextBlock Text="Selecione onde o banco de dados será salvo:" Margin="0,0,0,5"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding PathTexto}" IsReadOnly="True" materialDesign:HintAssist.Hint="Caminho da Pasta" />
                <Button Grid.Column="1" Content="..." Command="{Binding SelecionarPastaCommand}" Margin="10,0,0,0"/>
            </Grid>

            <TextBlock Text="O arquivo 'juridico_v5.db' será criado nesta pasta." FontSize="11" Foreground="Gray" Margin="0,5,0,30"/>

            <Button Content="CONFIRMAR E INICIAR" Command="{Binding ConfirmarCommand}" Height="45"/>
        </StackPanel>
    </Border>
</Window>
